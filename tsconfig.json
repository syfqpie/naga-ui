{
  "compilerOptions": {
    "target": "ES2021",
		"module": "ES2015",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
		"outDir": "./dist",
    "rootDir": "./src",
		"declaration": true,
    "declarationMap": true,
		"experimentalDecorators": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
		"sourceMap": true,
    "inlineSources": true,

    /* Bundler mode */
    "moduleResolution": "node",
		"noEmit": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
		"noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
		"allowSyntheticDefaultImports": true,

		/* Extras */
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
		"paths": {
      "@/*": ["./src/*"],
			"@typings/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*.ts"],
	"exclude": [
    "node_modules",
    "build"
  ]
}
